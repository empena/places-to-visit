<p>Add a place</p>

<%= form_with(model: @place, local: true) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Name" %>
  </div>
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location, required: true, placeholder: "Location" %>
  </div>
  <%= f.submit %>
<% end %>
